# Database Configuration
# Use PostgreSQL local o cloud provider
DATABASE_URL="postgresql://user:password@localhost:5432/jypturismo?schema=public"

# NextAuth Configuration
# Generate: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_characters
NEXTAUTH_URL=http://localhost:3000

# WhatsApp Business API Configuration
# Tutorial completo en: docs/API_SETUP_TUTORIAL.md
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_APP_SECRET=your_app_secret_here
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_min_20_chars

# Facebook Messenger Configuration
MESSENGER_ACCESS_TOKEN=your_messenger_access_token_here
MESSENGER_APP_SECRET=your_messenger_app_secret_here
MESSENGER_VERIFY_TOKEN=your_custom_verify_token_min_20_chars

# Instagram Messaging Configuration
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_VERIFY_TOKEN=your_custom_verify_token_min_20_chars

# Security Configuration
# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CSRF Protection
CSRF_SECRET=your_csrf_secret_min_32_characters

# Encryption Keys (AES-256)
# Generate: openssl rand -hex 32
ENCRYPTION_KEY=your_encryption_key_64_hex_characters

# API Keys Encryption
# Separate key for encrypting API tokens in DB
API_ENCRYPTION_KEY=your_api_encryption_key_64_hex_characters

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_MAX_AGE_SECONDS=1800

# Webhook Security
# IP Whitelist for webhook endpoints (comma separated)
WEBHOOK_ALLOWED_IPS=157.240.0.0/16,31.13.0.0/16

# Security Monitoring
ENABLE_SECURITY_LOGS=true
SECURITY_LOG_LEVEL=warn

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Environment
NODE_ENV=development
