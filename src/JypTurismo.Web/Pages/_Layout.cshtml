@using Microsoft.AspNetCore.Components.Web
@namespace JypTurismo.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <title>JYP Turismo - Central de Mensajería</title>
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="css/app.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Ha ocurrido un error. Esta aplicación puede no responder hasta que se recargue.
        </environment>
        <environment include="Development">
            Se produjo una excepción no controlada. Consulte los registros del navegador para obtener más detalles.
        </environment>
        <a href="" class="reload">Recargar</a>
        <a class="dismiss">✕</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
